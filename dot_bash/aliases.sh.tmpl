# Display listening ports with process information
cst_listen_ports() {
    netstat -anv |
        awk '/LISTEN/ {print $1, $4, $11}' |
        sed -E -e 's/\.([[:digit:]]+) / \1 /' |
        sort -nk3 |
        while read -r l; do
            pn="$(ps -p "${l/* /}" -o comm=)"
            pa="$(ps -p "${l/* /}" -o command= | sed "s|^$pn||")"
            echo -e "${l// /|}|$(basename "$pn")$pa"
        done |
        /opt/homebrew/opt/util-linux/bin/column -t -R 2,3,4 -s'|' |
        sed -E 's/^(.{80}).{4}.*$/\1 .../'
}

